<%- include ('../partials/header') %>

<%- include ('../partials/nav') %>


<div class="container  bg-dark mt-3 rounded-3 p-5  text-light" style="width:26rem;">
    <h1 class="mb-4 h4 text-center">Συμπληρωσε την Υπευθυνη Δηλωση</h1>
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel ">
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-1" type="button" class="btn btn-info btn-circle" aria-label="ΠΡΩΤΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ">1</a>
                <p><small>ΠΡΩΤΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-2" type="button" class="btn btn-outline-info bg-dark btn-circle"aria-label="ΔΕΥΤΕΡΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ"  disabled="disabled">2</a>
                <p><small>ΔΕΥΤΕΡΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-3" type="button" class="btn btn-outline-info  bg-dark  btn-circle" aria-label="ΤΕΛΕΥΤΑΙΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ"disabled="disabled">3</a>
                <p><small>ΤΡΙΤΟ ΒΗΜΑ</small></p>
            </div>
        </div>
    </div>
    
     <form role="form" class="my-3">
        <div class="panel panel-primary setup-content" id="step-1">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 1ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label for="to" class="control-label">ΠΡΟΣ</label>
                    <input id="to" maxlength="100" type="text" required="required" class="form-control"  />
                </div>
                <div class="form-group my-3">
                    <label for="name" class="control-label">ΟΝΟΜΑ</label>
                    <input id="name" maxlength="30" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΣ " />
                </div>
                <div class="form-group my-3">
                    <label for=" lname" class="control-label">ΕΠΩΝΥΜΟ</label>
                    <input id="lname" maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ.  ΓΕΩΡΓΙΟΥ" />
                </div>
                <div class="form-group mb-4">
                    <label for="fatherName"class="control-label">ΟΝΟΜΑ ΚΑΙ ΕΠΩΝΥΜΟ ΠΑΤΕΡΑ</label>
                    <input id="fatherName" maxlength="100" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ ΓΕΩΡΓΙΟΥ" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-2">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label for="motherName" class="control-label">ΟΝΟΜΑ ΚΑΙ ΕΠΩΝΥΜΟ ΜΗΤΕΡΑΣ</label>
                    <input id="motherName" maxlength="100" type="text" required="required" class="form-control" placeholder="π.χ. ΑΝΘΗ ΓΕΩΡΓΙΟΥ" />
                </div>
                <div class="form-group my-3">
                    <label for="date" class="control-label">ΗΜΕΡΟΜΗΝΙΑ ΓΕΝΝΗΣΗΣ</label>
                    <input id="date" type="date" required="required" class="form-control" placeholder="DD/MM/YYYY" />
                </div>
                <div class="form-group my-3">
                    <label for="blocation" class="control-label">ΤΟΠΟΣ ΓΕΝΝΗΣΗΣ</label>
                    <input id="blocation" maxlength="30" type="text" required="required" class="form-control" placeholder="π.χ. ΒΟΛΟΣ" />

                </div>
                <div class="form-group mb-4">
                    <label for="id" class="control-label">ΑΡΙΘΜΟΣ ΔΕΛΤΙΟΥ ΤΑΥΤΟΤΗΤΑΣ</label>
                    <input id="id" maxlength="15" type="text" required="required" class="form-control" placeholder="π.χ. ΑΜ 23122" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-3">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label for="tel" class="control-label">ΤΗΛΕΦΩΝΟ</label>
                    <input id="tel" maxlength="10" type="text" required="required" class="form-control" placeholder="π.χ. 6912345677" />
                </div>
                <div class="form-group my-3">
                    <label for="homeAddress" class="control-label">ΤΟΠΟΣ ΚΑΤΟΙΚΙΑΣ </label>
                    <input id="homeAddress" maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΒΟΛΟΣ" />
                </div>
                <div class="form-group my-3">
                    <label for="address" class="control-label">ΔΙΕΥΘΥΝΣΗ</label>
                    <input id="address" maxlength="55" type="text" required="required" class="form-control" placeholder="ΟΔΟΣ ΑΡΙΘΜΟΣ ΤΚ" />
                </div>
                <div class="form-group mb-4">
                    <label for="textcontent" class="form-label">ΔΗΛΩΝΩ ΟΤΙ:</label>
                    <textarea class="form-control" id="textcontent" rows="4"></textarea>
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="submit">ΚΑΤΑΧΩΡΗΣΗ ΔΗΛΩΣΗΣ</button>
            </div>
        </div>
    </form>
</div>

 <%- include ('../partials/footer') %>