<%- include ('../partials/header') %>

<%- include ('../partials/nav') %>


<div class="container  bg-dark mt-3 rounded-3 p-5  text-light" style="width:26rem;">
    <h1 class="mb-4 h4 text-center">Συμπληρωσε την Υπευθυνη Δηλωση</h1>
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel ">
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-1" type="button" class="btn btn-info btn-circle">1</a>
                <p><small>ΠΡΩΤΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-2" type="button" class="btn btn-outline-info bg-dark btn-circle" disabled="disabled">2</a>
                <p><small>ΔΕΥΤΕΡΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-3" type="button" class="btn btn-outline-info  bg-dark  btn-circle" disabled="disabled">3</a>
                <p><small>ΤΡΙΤΟ ΒΗΜΑ</small></p>
            </div>
        </div>
    </div>
    
     <form role="form" class="my-3">
        <div class="panel panel-primary setup-content" id="step-1">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 1ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label class="control-label">ΠΡΟΣ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΕΠΩΝΥΜΟ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group mb-4">
                    <label class="control-label">ΟΝΟΜΑ ΚΑΙ ΕΠΩΝΥΜΟ ΠΑΤΕΡΑ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-2">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑ ΚΑΙ ΕΠΩΝΥΜΟ ΜΗΤΕΡΑΣ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΗΜΕΡΟΜΗΝΙΑ ΓΕΝΝΗΣΗΣ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΤΟΠΟΣ ΓΕΝΝΗΣΗΣ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group mb-4">
                    <label class="control-label">ΑΡΙΘΜΟΣ ΔΕΛΤΙΟΥ ΤΑΥΤΟΤΗΤΑΣ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-3">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label class="control-label">ΤΗΛΕΦΩΝΟ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΤΟΠΟΣ ΚΑΤΟΙΚΙΑΣ </label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΔΙΕΥΘΥΝΣΗ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="ΟΔΟΣ ΑΡΙΘΜΟΣ ΤΚ" />
                </div>
                <div class="form-group mb-4">
                    <label for="exampleFormControlTextarea1" class="form-label">ΔΗΛΩΝΩ ΟΤΙ:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="submit">ΚΑΤΑΧΩΡΗΣΗ ΔΗΛΩΣΗΣ</button>
            </div>
        </div>
    </form>
</div>

 <%- include ('../partials/footer') %>