<%- include ('../partials/header') %>

<%- include ('../partials/nav') %>


<div class="container  bg-dark mt-3 rounded-3 p-5  text-light" style="width:26rem;">
    <h1 class="mb-4 h4 text-center">Συμπληρωσε την ΕΞΟΥΣΙΟΔΟΤΗΣΗ</h1>
    <div class="stepwizard d-none">
        <div class="stepwizard-row setup-panel ">
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-1" type="button" class="btn btn-info btn-circle" aria-label="ΠΡΩΤΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ">1</a>
                <p><small>ΠΡΩΤΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-2" type="button" class="btn btn-outline-info bg-dark btn-circle" disabled="disabled" aria-label="ΔΕΥΤΕΡΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ">2</a>
                <p><small>ΔΕΥΤΕΡΟ ΒΗΜΑ</small></p>
            </div>
            <div class="stepwizard-step col-xs-3"> 
                <a href="#step-3" type="button" class="btn btn-outline-info  bg-dark  btn-circle" disabled="disabled" aria-label="ΤΕΛΕΥΤΑΙΟ ΒΗΜΑ ΣΥΜΠΛΗΡΩΣΕΙΣ ΦΟΡΜΑΣ">3</a>
                <p><small>ΤΡΙΤΟ ΒΗΜΑ</small></p>
            </div>
        </div>
    </div>
     <form role="form" class="my-3">
        <div class="panel panel-primary setup-content" id="step-1">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 1ο</h3>
            </div>
            <div class="panel-body">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg ΕΠΕΛΕΞΕ ΓΕΝΟΣ">
                    <option selected>ΕΠΕΛΕΞΕ ΓΕΝΟΣ</option>
                    <option value="male">Ο</option>
                    <option value="woman">Η</option>
                  </select>
                <div class="form-group my-3">
                    <label for="fullName" class="control-label">ΟΝΟΜΑΤΕΠΟΝΥΜΟ</label>
                    <input id="fullName" maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΣ ΓΕΩΡΓΙΟΥ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑ ΠΑΤΕΡΑ</label>
                    <input maxlength="20" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ" />
                </div>
                <div class="form-group my-3">
                    <label for="mName" class="control-label">ΟΝΟΜΑ ΜΗΤΕΡΑΣ</label>
                    <input id="mName" maxlength="20" type="text" required="required" class="form-control" placeholder="π.χ. ΜΑΡΙΑ" />
                </div>
                <div class="form-group mb-4">
                    <label for="date" class="control-label">ΗΜΕΡΟΜΗΝΙΑ ΓΕΝΝΗΣΗΣ</label>
                    <input id="date" type="date" required="required" class="form-control" placeholder="DD/MM/YYYY" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-2">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label for="blocation" class="control-label">ΤΟΠΟ ΓΕΝΝΗΣΗΣ</label>
                    <input id="blocation" maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΒΟΛΟΣ" />
                </div>
                <div class="form-group my-3">
                    <label for="address" class="control-label">ΟΔΟΣ</label>
                    <input id="address" maxlength="100" type="text" required="required" class="form-control" placeholder="π.χ. ΚΑΡΑΜΑΝΛΗ 6" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΚΑΤΟΙΚΟΣ</label>
                    <input maxlength="30" type="text" required="required" class="form-control" placeholder="π.χ. ΑΘΗΝΑΣ" />
                </div>
                <div class="form-group mb-4">
                    <label class="control-label">ΑΔΤ/ΔΙΑΒΑΤΗΡΙΟ</label>
                    <input maxlength="20" type="text" required="required" class="form-control" placeholder="π.χ. ΑΦ 123122" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-3">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 3ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label class="control-label">ΕΚΔΟΘΗΚΕ</label>
                    <input maxlength="70" type="text" required="required" class="form-control" placeholder="π.χ. ΑΣΤΥΝΟΜΟΜΙΑ ΒΟΛΟΥ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΑΠΟ ΤΟ </label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ ΓΕΩΡΓΙΟΥ" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button"> ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <!-- εξουσιοδοτω -->
        <div class="panel panel-primary setup-content" id="step-4">
            <div class="panel-heading">
                    <h3 class="mb-4 h4 text-center">ΕΞΟΥΣΙΟΔΟΤΩ</h3>
                 <h3 class="panel-title">ΒΗΜΑ 1ο</h3>
            </div>
            <div class="panel-body">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option selected>ΕΠΕΛΕΞΕ ΓΕΝΟΣ</option>
                    <option value="1">Ο</option>
                    <option value="2">Η</option>
                  </select>
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑΤΕΠΟΝΥΜΟ</label>
                    <input maxlength="70" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ ΓΕΩΡΓΙΟΥ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑ ΠΑΤΕΡΑ</label>
                    <input maxlength="25" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΟΝΟΜΑ ΜΗΤΕΡΑΣ </label>
                    <input maxlength="25" type="text" required="required" class="form-control" placeholder="π.χ. ΑΝΘΗ" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button"> ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-5">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 2ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group my-3">
                    <label class="control-label">ΗΜΕΡΟΜΗΝΙΑ ΓΕΝΝΗΣΗΣ</label>
                    <input  type="date" required="required" class="form-control" placeholder="DD/MM/YYYY" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΤΟΠΟΣ ΓΕΝΝΗΣΗΣ </label>
                    <input maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΒΟΛΟΣ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΚΑΤΟΙΚΟΣ</label>
                    <input maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΒΟΛΟΥ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΟΔΟΣ</label>
                    <input maxlength="60" type="text" required="required" class="form-control" placeholder="π.χ. ΚΑΡΑΜΑΝΛΗ 8" />
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="button">ΕΠΟΜΕΝΗ ΣΕΛΙΔΑ</button>
            </div>
        </div>
        <div class="panel panel-primary setup-content" id="step-3">
            <div class="panel-heading">
                 <h3 class="panel-title">ΒΗΜΑ 3ο</h3>
            </div>
            <div class="panel-body">
                <div class="form-group mb-4">
                    <label class="control-label">ΑΔΤ/ΔΙΑΒΑΤΗΡΙΟ</label>
                    <input maxlength="20" type="text" required="required" class="form-control" placeholder="π.χ. ΒΑ 12314" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΕΚΔΟΘΗΚΕ</label>
                    <input maxlength="100" type="text" required="required" class="form-control" placeholder="π.χ. ΑΣΤΥΝΟΜΟΜΙΑ ΞΑΘΝΗΣ" />
                </div>
                <div class="form-group my-3">
                    <label class="control-label">ΑΠΟ ΤΟ </label>
                    <input maxlength="55" type="text" required="required" class="form-control" placeholder="π.χ. ΝΙΚΟΛΑΟΣ ΓΕΩΡΓΙΟΥ" />
                </div>
                <div class="form-group mb-4">
                    <label for="textcontent" class="form-label">ΔΗΛΩΝΩ ΟΤΙ:</label>
                    <textarea class="form-control" id="textcontent" rows=""></textarea>
                </div>
                <button class="btn btn-outline-info nextBtn float-end" type="submit">ΚΑΤΑΧΩΡΗΣΗ ΔΗΛΩΣΗΣ</button>
            </div>
        </div>
    </form>
</div>

 <%- include ('../partials/footer') %>